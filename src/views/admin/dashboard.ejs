                                            <span class="detail-value overdue-date">
                                                <i class="fas fa-calendar-times"></i>
                                                <%= new Date(deliverable.fecha_entrega).toLocaleDateString('es-ES', { 
                                                    year: 'numeric', 
                                                    month: 'long', 
                                                    day: 'numeric' 
                                                }) %>
                                            </span>
                                        </div>
                                        <% if (deliverable.fase_nombre) { %>
                                            <div class="detail-row">
                                                <span class="detail-label">Fase:</span>
                                                <span class="detail-value"><%= deliverable.fase_nombre %></span>
                                            </div>
                                        <% } %>
                                        <div class="detail-row">
                                            <span class="detail-label">Días vencido:</span>
                                            <span class="detail-value days-overdue">
                                                <% 
                                                    const today = new Date();
                                                    const dueDate = new Date(deliverable.fecha_entrega);
                                                    const diffTime = today - dueDate;
                                                    const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
                                                %>
                                                <i class="fas fa-exclamation-circle"></i>
                                                <%= diffDays %> día<%= diffDays !== 1 ? 's' : '' %>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="overdue-actions">
                                    <span class="status-badge status-overdue">Vencido</span>
                                    <% if (deliverable.proyecto_id) { %>
                                        <a href="/admin/projects/<%= deliverable.proyecto_id %>" class="btn btn-sm btn-outline" title="Ver proyecto">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    <% } %>
                                </div>
                            </div>
                        <% }); %>
                        
                        <% if (overdueDeliverables.length > 5) { %>
                            <div class="overdue-more">
                                <a href="/admin/deliverables?filter=overdue" class="btn btn-outline">
                                    <i class="fas fa-list"></i>
                                    Ver todos los <%= overdueDeliverables.length %> entregables vencidos
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            <% } else { %>
                <div class="content-card" style="padding: 18px 18px 24px;">
                    <div class="card-header" style="margin-bottom: 6px;">
                        <h3 class="card-title" style="color: #0f766e;">
                            <i class="fas fa-check-circle"></i>
                            Entregables al Día
                        </h3>
                        <div class="card-action" style="color: #0f766e;">
                            <i class="fas fa-info-circle"></i> Sistema al día
                        </div>
                    </div>
                    
                    <div style="padding: 20px; background: linear-gradient(135deg, rgba(16, 185, 129, 0.12) 0%, rgba(21,176,151,0.10) 100%); border-radius: 12px; color: #065f46; text-align: center; border: 1px solid rgba(16,185,129,0.22);">
                        <div style="display:flex; align-items:center; justify-content:center; gap:10px; margin-bottom:10px;">
                            <i class="fas fa-thumbs-up" style="font-size: 22px;"></i>
                            <span style="font-weight:700;">Estado Óptimo</span>
                        </div>
                        <p style="margin: 0; font-weight: 500;">¡Excelente! No hay entregables vencidos en este momento.</p>
                    </div>
                </div>
            <% } %>
        </div>
