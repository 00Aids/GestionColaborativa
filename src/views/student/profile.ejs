    <script>
        let isEditing = false;
        const originalValues = {};

        // Toggle edit mode
        document.getElementById('editBtn').addEventListener('click', function() {
            console.log('‚úèÔ∏è Bot√≥n editar clickeado - activando modo edici√≥n');
            toggleEditMode(true);
        });

        document.getElementById('cancelBtn').addEventListener('click', function() {
            restoreOriginalValues();
            toggleEditMode(false);
        });

        function toggleEditMode(editing) {
            console.log('üîÑ toggleEditMode llamado con editing =', editing);
            isEditing = editing;
            const inputs = document.querySelectorAll('#profileForm input, #profileForm select, #profileForm textarea');
            const editBtn = document.getElementById('editBtn');
            const cancelBtn = document.getElementById('cancelBtn');
            const saveBtn = document.getElementById('saveBtn');
            const editModeIndicator = document.getElementById('editModeIndicator');
            
            console.log('üîç Elementos encontrados:', {
                inputs: inputs.length,
                editBtn: !!editBtn,
                cancelBtn: !!cancelBtn,
                saveBtn: !!saveBtn,
                editModeIndicator: !!editModeIndicator
            });

            if (editing) {
                // Store original values
                inputs.forEach(input => {
                    originalValues[input.name] = input.value;
                    // Enable all inputs except codigo_usuario (always disabled)
                    if (input.id !== 'codigo_usuario') {
                        input.disabled = false;
                    }
                });

                editBtn.style.display = 'none';
                cancelBtn.style.display = 'inline-flex';
                saveBtn.style.display = 'inline-flex';
                editModeIndicator.style.display = 'flex';
            } else {
                inputs.forEach(input => {
                    // Keep biografia textarea always enabled for auto-save
                    // Keep codigo_usuario always disabled (non-editable)
                    if (input.id !== 'biografia') {
                        input.disabled = true;
                    }
                });

                editBtn.style.display = 'inline-flex';
                cancelBtn.style.display = 'none';
                saveBtn.style.display = 'none';
                editModeIndicator.style.display = 'none';
            }
        }

        function restoreOriginalValues() {
            Object.keys(originalValues).forEach(name => {
                const input = document.querySelector(`[name="${name}"]`);
                if (input) {
                    input.value = originalValues[name];
                }
            });
        }

        // Form submission
        document.getElementById('profileForm').addEventListener('submit', function(e) {
            console.log('üîÑ Formulario enviado - evento capturado');
            e.preventDefault();
            
            const saveBtn = document.getElementById('saveBtn');
            const originalText = saveBtn.innerHTML;
            
            console.log('üìù Datos del formulario:', new FormData(this));
            
            saveBtn.innerHTML = '<span class="spinner"></span> Guardando...';
            saveBtn.disabled = true;

            const formData = new FormData(this);
            
            fetch('/student/profile/update', {
                method: 'PUT',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showFlashMessage('Perfil actualizado exitosamente', 'success');
                    toggleEditMode(false);
                    
                    // Update sidebar info
                    const profileName = document.querySelector('.profile-name');
                    const nombres = document.querySelector('[name="nombres"]').value;
                    const apellidos = document.querySelector('[name="apellidos"]').value;
                    profileName.textContent = `${nombres} ${apellidos}`;
                    
                    // Update avatar
                    const avatar = document.querySelector('.avatar');
                    avatar.textContent = nombres.charAt(0).toUpperCase() + apellidos.charAt(0).toUpperCase();
                } else {
                    showFlashMessage('Error al actualizar el perfil: ' + data.message, 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showFlashMessage('Error al actualizar el perfil', 'error');
            })
            .finally(() => {
                saveBtn.innerHTML = originalText;
                saveBtn.disabled = false;
            });
        });

        // Password form submission
        console.log('üìã Registrando evento de env√≠o del formulario de contrase√±a');
        document.getElementById('passwordForm').addEventListener('submit', function(e) {
            e.preventDefault();
            console.log('üîÑ Formulario de contrase√±a enviado');
            
            const currentPassword = document.getElementById('current_password').value;
            const newPassword = document.getElementById('new_password').value;
            const confirmPassword = document.getElementById('confirm_password').value;
            
            console.log('üìù Valores del formulario:', {
                currentPassword: currentPassword ? '***' : 'vac√≠o',
                newPassword: newPassword ? '***' : 'vac√≠o',
                confirmPassword: confirmPassword ? '***' : 'vac√≠o'
            });
            
            // Validaciones del frontend
            if (!currentPassword.trim()) {
                showFlashMessage('La contrase√±a actual es obligatoria', 'error');
                return;
            }
            
            if (!newPassword.trim()) {
                showFlashMessage('La nueva contrase√±a es obligatoria', 'error');
                return;
            }
            
            if (newPassword.length < 6) {
                showFlashMessage('La nueva contrase√±a debe tener al menos 6 caracteres', 'error');
                return;
            }
            
            if (newPassword !== confirmPassword) {
                showFlashMessage('Las contrase√±as no coinciden', 'error');
                return;
            }
            
            if (currentPassword === newPassword) {
                showFlashMessage('La nueva contrase√±a debe ser diferente a la actual', 'error');
                return;
            }
            
            // Validar fortaleza de la contrase√±a
            if (!isStrongPassword(newPassword)) {
                showFlashMessage('La contrase√±a debe contener al menos una letra may√∫scula, una min√∫scula y un n√∫mero', 'error');
                return;
            }

            const submitBtn = this.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;
            
            submitBtn.innerHTML = '<span class="spinner"></span> Cambiando...';
            submitBtn.disabled = true;

            console.log('üöÄ Enviando petici√≥n al servidor...');
            
            const requestData = {
                current_password: currentPassword,
                new_password: newPassword,
                confirm_password: confirmPassword
            };
            
            fetch('/student/profile/password', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(requestData)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showFlashMessage('Contrase√±a cambiada exitosamente', 'success');
                    this.reset();
                } else {
                    showFlashMessage('Error al cambiar la contrase√±a: ' + data.message, 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showFlashMessage('Error al cambiar la contrase√±a', 'error');
            })
            .finally(() => {
                submitBtn.innerHTML = originalText;
                submitBtn.disabled = false;
            });
        });

        // Auto-save functionality for additional information (biografia)
        let biografiaTimeout;
        const biografiaTextarea = document.getElementById('biografia');
        
        console.log('üìù Configurando guardado autom√°tico para informaci√≥n adicional');
        
        if (biografiaTextarea) {
            biografiaTextarea.addEventListener('input', function() {
                const biografia = this.value;
                
                // Clear previous timeout
                if (biografiaTimeout) {
                    clearTimeout(biografiaTimeout);
                }
                
                // Set new timeout for auto-save (debounce of 2 seconds)
                biografiaTimeout = setTimeout(() => {
                    console.log('üíæ Guardando informaci√≥n adicional autom√°ticamente...');
                    saveAdditionalInfo(biografia);
                }, 2000);
            });
        }
        
        function saveAdditionalInfo(biografia) {
            const requestData = {
                biografia: biografia
            };
            
            console.log('üöÄ Enviando informaci√≥n adicional al servidor:', requestData);
            
            fetch('/student/profile/additional-info', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest',
                    'Accept': 'application/json'
                },
                body: JSON.stringify(requestData)
            })
            .then(response => {
                // Verificar si la respuesta es JSON v√°lida
                const contentType = response.headers.get('content-type');
                if (!contentType || !contentType.includes('application/json')) {
                    throw new Error('La respuesta del servidor no es JSON v√°lida. Posible problema de autenticaci√≥n.');
                }
                
                if (!response.ok) {
                    throw new Error(`Error HTTP: ${response.status}`);
                }
                
                return response.json();
            })
            .then(data => {
                if (data.success) {
                    console.log('‚úÖ Informaci√≥n adicional guardada exitosamente');
                    showFlashMessage('Informaci√≥n adicional guardada autom√°ticamente', 'success');
                } else {
                    console.error('‚ùå Error al guardar informaci√≥n adicional:', data.message);
                    showFlashMessage('Error al guardar informaci√≥n adicional: ' + data.message, 'error');
                }
            })
            .catch(error => {
                console.error('‚ùå Error de red al guardar informaci√≥n adicional:', error);
                if (error.message.includes('JSON v√°lida')) {
                    showFlashMessage('Error de autenticaci√≥n. Por favor, recarga la p√°gina e inicia sesi√≥n nuevamente.', 'error');
                } else {
                    showFlashMessage('Error de conexi√≥n al guardar informaci√≥n adicional', 'error');
                }
            });
        }
        
        // Funci√≥n para validar fortaleza de contrase√±a
        function isStrongPassword(password) {
            const hasUpperCase = /[A-Z]/.test(password);
            const hasLowerCase = /[a-z]/.test(password);
            const hasNumbers = /\d/.test(password);
            return hasUpperCase && hasLowerCase && hasNumbers;
        }

        // Password strength indicator
        document.getElementById('new_password').addEventListener('input', function() {
            const password = this.value;
            const strengthIndicator = document.getElementById('password-strength');
            const strengthFill = document.getElementById('strength-fill');
            const strengthText = document.getElementById('strength-text');
            
            if (password.length === 0) {
                strengthIndicator.style.display = 'none';
                return;
            }
            
            strengthIndicator.style.display = 'block';
            
            // Check requirements
            const requirements = {
                length: password.length >= 6,
                uppercase: /[A-Z]/.test(password),
                lowercase: /[a-z]/.test(password),
                number: /\d/.test(password)
            };
            
            // Update requirement indicators
            updateRequirement('req-length', requirements.length);
            updateRequirement('req-uppercase', requirements.uppercase);
            updateRequirement('req-lowercase', requirements.lowercase);
            updateRequirement('req-number', requirements.number);
            
            // Calculate strength
            const score = Object.values(requirements).filter(Boolean).length;
            
            // Remove all strength classes
            strengthFill.className = 'strength-fill';
            strengthText.className = 'strength-text';
            
            switch(score) {
                case 1:
                    strengthFill.classList.add('strength-weak');
                    strengthText.classList.add('text-weak');
                    strengthText.textContent = 'Muy d√©bil';
                    break;
                case 2:
                    strengthFill.classList.add('strength-fair');
                    strengthText.classList.add('text-fair');
                    strengthText.textContent = 'D√©bil';
                    break;
                case 3:
                    strengthFill.classList.add('strength-good');
                    strengthText.classList.add('text-good');
                    strengthText.textContent = 'Buena';
                    break;
                case 4:
                    strengthFill.classList.add('strength-strong');
                    strengthText.classList.add('text-strong');
                    strengthText.textContent = 'Fuerte';
                    break;
                default:
                    strengthText.textContent = '';
            }
        });
        
        function updateRequirement(elementId, isValid) {
            const element = document.getElementById(elementId);
            const icon = element.querySelector('i');
            
            if (isValid) {
                element.classList.add('valid');
                icon.className = 'fas fa-check text-success';
            } else {
                element.classList.remove('valid');
                icon.className = 'fas fa-times text-danger';
            }
        }

        // Password visibility toggle
        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const button = input.nextElementSibling;
            const icon = button.querySelector('i');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.className = 'fas fa-eye-slash';
            } else {
                input.type = 'password';
                icon.className = 'fas fa-eye';
            }
        }

        // Avatar upload
        document.getElementById('avatar-input').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const formData = new FormData();
                formData.append('avatar', file);
                
                fetch('/student/profile/avatar', {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showFlashMessage('Avatar actualizado exitosamente', 'success');
                        // Here you would update the avatar display with the new image
                    } else {
                        showFlashMessage('Error al subir el avatar: ' + data.message, 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showFlashMessage('Error al subir el avatar', 'error');
                });
            }
        });

        // Flash message function
        function showFlashMessage(message, type) {
            const flashContainer = document.querySelector('.flash-messages') || createFlashContainer();
            
            const flashMessage = document.createElement('div');
            flashMessage.className = `flash-message flash-${type}`;
            flashMessage.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i>
                ${message}
            `;
            
            flashContainer.appendChild(flashMessage);
            
            // Auto-hide after 5 seconds
            setTimeout(() => {
                flashMessage.style.transition = 'all 0.5s ease';
                flashMessage.style.opacity = '0';
                flashMessage.style.transform = 'translateX(100%)';
                setTimeout(() => {
                    flashMessage.remove();
                }, 500);
            }, 5000);
        }

        function createFlashContainer() {
            const container = document.createElement('div');
            container.className = 'flash-messages';
            document.querySelector('.container').insertBefore(container, document.querySelector('.profile-container'));
            return container;
        }

        // Auto-hide existing flash messages
        document.addEventListener('DOMContentLoaded', function() {
            const flashMessages = document.querySelectorAll('.flash-message');
            flashMessages.forEach(message => {
                setTimeout(() => {
                    message.style.transition = 'all 0.5s ease';
                    message.style.opacity = '0';
                    message.style.transform = 'translateX(100%)';
                    setTimeout(() => {
                        message.remove();
                    }, 500);
                }, 5000);
            });
        });

        // Form validation
        document.querySelectorAll('input[required]').forEach(input => {
            input.addEventListener('blur', function() {
                if (!this.value.trim()) {
                    this.style.borderColor = '#dc3545';
                } else {
                    this.style.borderColor = '#e9ecef';
                }
            });
        });

        // Email validation
        document.getElementById('email').addEventListener('blur', function() {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (this.value && !emailRegex.test(this.value)) {
                this.style.borderColor = '#dc3545';
                showFlashMessage('Por favor ingresa un email v√°lido', 'error');
            } else {
                this.style.borderColor = '#e9ecef';
            }
        });

        // DEBUG: Agregar listener adicional para debuggear
        console.log('üîß Agregando listener de debug...');
        
        // Verificar que el formulario existe
        const debugForm = document.getElementById('profileForm');
        console.log('üîç Formulario encontrado:', !!debugForm);
        
        if (debugForm) {
            // Agregar listener directo
            debugForm.addEventListener('submit', function(e) {
                console.log('üö® DEBUG: Submit event capturado!');
                console.log('üö® DEBUG: Event target:', e.target);
                console.log('üö® DEBUG: Form data:', new FormData(this));
            });
            
            // Verificar bot√≥n de guardar
            const debugSaveBtn = document.getElementById('saveBtn');
            console.log('üîç Bot√≥n guardar encontrado:', !!debugSaveBtn);
            
            if (debugSaveBtn) {
                debugSaveBtn.addEventListener('click', function(e) {
                    console.log('üö® DEBUG: Save button clicked!');
                    console.log('üö® DEBUG: Button type:', this.type);
                    console.log('üö® DEBUG: Form:', this.form);
                });
            }
        }
        
        // Verificar despu√©s de un delay
        setTimeout(() => {
            const delayedForm = document.getElementById('profileForm');
            const delayedSaveBtn = document.getElementById('saveBtn');
            console.log('üïê DELAYED CHECK - Form:', !!delayedForm);
            console.log('üïê DELAYED CHECK - Save button:', !!delayedSaveBtn);
            
            if (delayedSaveBtn) {
                console.log('üïê DELAYED CHECK - Save button display:', delayedSaveBtn.style.display);
                console.log('üïê DELAYED CHECK - Save button disabled:', delayedSaveBtn.disabled);
            }
        }, 2000);
    </script>
