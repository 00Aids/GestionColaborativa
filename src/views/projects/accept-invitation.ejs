<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aceptar Invitación - <%= project.titulo %></title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
            padding: 20px;
        }
        .invitation-card {
            background: white;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            width: 100%;
            text-align: center;
        }
        .project-icon {
            font-size: 48px;
            color: #667eea;
            margin-bottom: 20px;
        }
        .btn-custom {
            padding: 12px 30px;
            border: none;
            border-radius: 25px;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            margin: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
            min-width: 150px;
        }
        .btn-accept {
            background: linear-gradient(45deg, #10b981, #059669);
            color: white;
        }
        .btn-accept:hover {
            background: linear-gradient(45deg, #059669, #047857);
            color: white;
            transform: translateY(-2px);
        }
        .btn-reject {
            background: linear-gradient(45deg, #ef4444, #dc2626);
            color: white;
        }
        .btn-reject:hover {
            background: linear-gradient(45deg, #dc2626, #b91c1c);
            color: white;
            transform: translateY(-2px);
        }
        .message-box {
            background: #fef3c7;
            padding: 20px;
            border-radius: 15px;
            margin: 20px 0;
            border-left: 4px solid #f59e0b;
        }
        .project-info {
            background: #f8fafc;
            padding: 20px;
            border-radius: 15px;
            margin: 20px 0;
            border-left: 4px solid #667eea;
        }
        .expiration-warning {
            background: #fef2f2;
            padding: 15px;
            border-radius: 10px;
            margin: 20px 0;
            border-left: 4px solid #ef4444;
            font-size: 14px;
        }
        .auth-section {
            background: #f1f5f9;
            padding: 20px;
            border-radius: 15px;
            margin: 30px 0;
        }
        .loading {
            display: none;
        }
        .loading.show {
            display: inline-block;
        }
    </style>
</head>
<body>
    <div class="invitation-card">
        <div class="project-icon">
            <i class="fas fa-envelope-open"></i>
        </div>
        
        <h1 class="mb-3">🎓 Invitación al Proyecto</h1>
        <h2 class="text-primary mb-3"><%= project.titulo %></h2>
        
        <div class="project-info">
            <h5><i class="fas fa-info-circle"></i> Detalles del Proyecto</h5>
            <p class="mb-2"><strong>Nombre:</strong> <%= project.titulo %></p>
            <% if (project.descripcion) { %>
            <p class="mb-2"><strong>Descripción:</strong> <%= project.descripcion %></p>
            <% } %>
            <p class="mb-0"><strong>Invitado por:</strong> <%= invitation.invitado_por_nombre || 'Administrador' %></p>
        </div>
        
        <% if (invitation.mensaje) { %>
        <div class="message-box">
            <h6><i class="fas fa-comment"></i> Mensaje personal:</h6>
            <p class="mb-0"><%= invitation.mensaje %></p>
        </div>
        <% } %>
        
        <div class="expiration-warning">
            <i class="fas fa-clock"></i> <strong>Importante:</strong> Esta invitación expirará en 
            <span id="timeRemaining">7 días</span>. 
            Si no tienes una cuenta en el sistema, podrás crear una al hacer clic en "Aceptar Invitación".
        </div>
        
        <!-- Sección de autenticación -->
        <div class="auth-section">
            <% if (typeof user !== 'undefined' && user) { %>
                <!-- Usuario autenticado -->
                <h6 class="text-success"><i class="fas fa-user-check"></i> Conectado como: <%= user.nombres %> <%= user.apellidos %></h6>
                <p class="text-muted">Puedes aceptar la invitación directamente.</p>
            <% } else { %>
                <!-- Usuario no autenticado -->
                <h6 class="text-warning"><i class="fas fa-user-times"></i> No has iniciado sesión</h6>
                <p class="text-muted">Para aceptar la invitación, necesitas iniciar sesión o crear una cuenta.</p>
                <div class="mt-3">
                    <a href="/auth/login?redirect=<%= encodeURIComponent('/projects/invitations/accept/' + codigo) %>" class="btn btn-outline-primary me-2">
                        <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
                    </a>
                    <a href="/auth/register?redirect=<%= encodeURIComponent('/projects/invitations/accept/' + codigo) %>" class="btn btn-outline-success">
                        <i class="fas fa-user-plus"></i> Crear Cuenta
                    </a>
                </div>
            <% } %>
        </div>
        
        <!-- Botones de acción -->
        <div style="margin-top: 30px;">
            <% if (typeof user !== 'undefined' && user) { %>
                <form id="acceptForm" action="/projects/invitations/accept/<%= codigo %>" method="POST" style="display: inline;">
                    <button type="submit" class="btn-custom btn-accept" id="acceptBtn">
                        <i class="fas fa-check"></i> Aceptar Invitación
                        <span class="loading spinner-border spinner-border-sm ms-2" role="status"></span>
                    </button>
                </form>
                
                <form id="rejectForm" action="/projects/invitations/reject/<%= codigo %>" method="POST" style="display: inline;">
                    <button type="submit" class="btn-custom btn-reject" id="rejectBtn">
                        <i class="fas fa-times"></i> Rechazar
                        <span class="loading spinner-border spinner-border-sm ms-2" role="status"></span>
                    </button>
                </form>
            <% } else { %>
                <p class="text-muted">Inicia sesión o crea una cuenta para continuar.</p>
            <% } %>
        </div>
        
        <div class="mt-4">
            <small class="text-muted">
                <i class="fas fa-shield-alt"></i> 
                Esta invitación es segura y fue enviada por el Sistema de Gestión Colaborativa Académica.
            </small>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Manejar envío de formularios con loading
        document.getElementById('acceptForm')?.addEventListener('submit', function(e) {
            const btn = document.getElementById('acceptBtn');
            const loading = btn.querySelector('.loading');
            btn.disabled = true;
            loading.classList.add('show');
        });

        document.getElementById('rejectForm')?.addEventListener('submit', function(e) {
            const btn = document.getElementById('rejectBtn');
            const loading = btn.querySelector('.loading');
            btn.disabled = true;
            loading.classList.add('show');
        });

        // Calcular tiempo restante (simulado - en producción vendría del servidor)
        function updateTimeRemaining() {
            const expirationDate = new Date('<%= invitation.fecha_expiracion %>');
            const now = new Date();
            const timeDiff = expirationDate - now;
            
            if (timeDiff > 0) {
                const days = Math.floor(timeDiff / (1000 * 60 * 60 * 24));
                const hours = Math.floor((timeDiff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                
                let timeText = '';
                if (days > 0) {
                    timeText = `${days} día${days > 1 ? 's' : ''}`;
                    if (hours > 0) {
                        timeText += ` y ${hours} hora${hours > 1 ? 's' : ''}`;
                    }
                } else if (hours > 0) {
                    timeText = `${hours} hora${hours > 1 ? 's' : ''}`;
                } else {
                    timeText = 'menos de 1 hora';
                }
                
                document.getElementById('timeRemaining').textContent = timeText;
            } else {
                document.getElementById('timeRemaining').textContent = 'EXPIRADA';
                document.getElementById('timeRemaining').style.color = 'red';
            }
        }

        // Actualizar tiempo al cargar la página
        updateTimeRemaining();
    </script>
</body>
</html>