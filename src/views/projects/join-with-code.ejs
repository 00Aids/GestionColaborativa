<!DOCTYPE html>
<html>
<head>
    <title>Unirse al Proyecto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <h3>Unirse al Proyecto</h3>
                            <p class="text-muted">Ingresa el código de invitación que recibiste</p>
                        </div>
                        
                        <form id="joinForm">
                            <div class="mb-4">
                                <label class="form-label">Código de Invitación</label>
                                <input type="text" class="form-control form-control-lg text-center" 
                                       id="invitationCode" placeholder="Ingresa el código" required>
                            </div>
                            
                            <button type="submit" class="btn btn-primary btn-lg w-100">
                                Unirse al Proyecto
                            </button>
                        </form>
                        
                        <div id="result" class="mt-3"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        document.getElementById('joinForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const code = document.getElementById('invitationCode').value;
            
            try {
                const response = await fetch(`/projects/invitations/accept/${code}`, {
                    method: 'POST'
                });
                
                const data = await response.json();
                
                if (data.success) {
                    document.getElementById('result').innerHTML = 
                        '<div class="alert alert-success">¡Te has unido al proyecto exitosamente!</div>';
                    setTimeout(() => {
                        window.location.href = '/dashboard';
                    }, 2000);
                } else {
                    document.getElementById('result').innerHTML = 
                        `<div class="alert alert-danger">${data.error}</div>`;
                }
            } catch (error) {
                document.getElementById('result').innerHTML = 
                    '<div class="alert alert-danger">Error al procesar la invitación</div>';
            }
        });
    </script>
</body>
</html>