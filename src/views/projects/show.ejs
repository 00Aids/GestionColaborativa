                padding: 15px 20px;
                border-radius: 5px;
                color: white;
                z-index: 10000;
                background-color: ${type === 'success' ? '#28a745' : '#dc3545'};
            `;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.remove();
            }, 3000);
        }

        // Progress and Statistics Functions
        function calculateProjectStats(deliverables) {
            const stats = {
                totalDeliverables: deliverables.length,
                completedDeliverables: deliverables.filter(d => d.estado === 'Completado').length,
                inProgressDeliverables: deliverables.filter(d => d.estado === 'En Progreso').length,
                pendingDeliverables: deliverables.filter(d => d.estado === 'Pendiente').length,
                overdueDeliverables: deliverables.filter(d => {
                    const dueDate = new Date(d.fecha_vencimiento);
                    const today = new Date();
                    return dueDate < today && d.estado !== 'Completado';
                }).length
            };
            
            // Calculate progress percentages
            stats.deliverablesProgress = stats.totalDeliverables > 0 
                ? Math.round((stats.completedDeliverables / stats.totalDeliverables) * 100)
                : 0;
            
            // Calculate time progress
            const startDate = new Date('<%= project.fecha_inicio || new Date() %>');
            const endDate = new Date('<%= project.fecha_fin || new Date() %>');
            const today = new Date();
            
            if (endDate > startDate) {
                const totalDuration = endDate - startDate;
                const elapsed = today - startDate;
                stats.timeProgress = Math.max(0, Math.min(100, Math.round((elapsed / totalDuration) * 100)));
                
                const remainingTime = endDate - today;
                stats.daysRemaining = Math.max(0, Math.ceil(remainingTime / (1000 * 60 * 60 * 24)));
            } else {
                stats.timeProgress = 0;
                stats.daysRemaining = 0;
            }
            
            // Calculate overall progress (weighted average)
            stats.overallProgress = Math.round((stats.deliverablesProgress * 0.7) + (stats.timeProgress * 0.3));
            
            return stats;
        }

        function updateProjectStats(stats) {
            // Update stat cards
            document.getElementById('tasks-completed').textContent = stats.completedDeliverables;
            document.getElementById('total-deliverables').textContent = stats.totalDeliverables;
            document.getElementById('project-progress').textContent = stats.overallProgress + '%';
            document.getElementById('days-remaining').textContent = stats.daysRemaining;
            
            // Update progress bars
            updateProgressBar('overall-progress', stats.overallProgress, stats.overallProgress + '%');
            updateProgressBar('deliverables-progress', stats.deliverablesProgress, 
                `${stats.completedDeliverables} de ${stats.totalDeliverables}`);
            updateProgressBar('tasks-progress', stats.deliverablesProgress, 
                `${stats.completedDeliverables} de ${stats.totalDeliverables}`);
            updateProgressBar('time-progress', stats.timeProgress, stats.timeProgress + '%');
            
            // Update stat card colors based on progress
            updateStatCardColors(stats);
        }

        function updateProgressBar(prefix, percentage, text) {
            const fillElement = document.getElementById(prefix + '-fill');
            const textElement = document.getElementById(prefix + '-text');
            
            if (fillElement) {
                fillElement.style.width = percentage + '%';
                // Add smooth transition
                fillElement.style.transition = 'width 0.5s ease-in-out';
            }
            
            if (textElement) {
                textElement.textContent = text;
            }
        }

        function updateStatCardColors(stats) {
            // Update progress stat card color based on progress
            const progressCard = document.querySelector('#project-progress').closest('.stat-card');
            const progressIcon = progressCard.querySelector('.stat-icon');
            
            if (stats.overallProgress >= 80) {
                progressIcon.style.backgroundColor = '#d4edda';
                progressIcon.style.color = '#155724';
            } else if (stats.overallProgress >= 50) {
                progressIcon.style.backgroundColor = '#fff3cd';
                progressIcon.style.color = '#856404';
            } else {
                progressIcon.style.backgroundColor = '#f8d7da';
                progressIcon.style.color = '#721c24';
            }
            
            // Update days remaining color based on urgency
            const daysCard = document.querySelector('#days-remaining').closest('.stat-card');
            const daysIcon = daysCard.querySelector('.stat-icon');
            
            if (stats.daysRemaining <= 7) {
                daysIcon.style.backgroundColor = '#f8d7da';
                daysIcon.style.color = '#721c24';
            } else if (stats.daysRemaining <= 30) {
                daysIcon.style.backgroundColor = '#fff3cd';
                daysIcon.style.color = '#856404';
            } else {
                daysIcon.style.backgroundColor = '#d4edda';
                daysIcon.style.color = '#155724';
            }
        }

        function addProgressAnimations() {
            // Add pulse animation to overdue items
            const style = document.createElement('style');
            style.textContent = `
